@model Nordic_Align_V7.Models.TranportModel


@{
    // Ställ in titeln beroende på om modellen är tom eller inte
    ViewData["Title"] = Model != null && Model.Id != 0 ? "Ändra bil" : "Lägga till en bil";
}

<section class="transport">
    <div class="color"></div>
    <div class="color"></div>
    <div class="color"></div>

     <div class="box">
        <div class="square" style="--i:0;"></div>
        <div class="square" style="--i:1;"></div>
        <div class="square" style="--i:2;"></div>
        <div class="square" style="--i:3;"></div>
        <div class="square" style="--i:4;"></div>

        <div class="container">
            <div class="form">

                <h2>@ViewData["Title"]</h2>

                <form asp-action="@(Model != null && Model.Id != 0 ? "Edit" : "Create")" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <div class="inputBox">
                        <label asp-for="TransportNumber" class="label"></label>
                        <div class="inputBox-content">
                            <input asp-for="TransportNumber" class="form-control" aria-label="Transport Number" />
                            <span style="color:red;" asp-validation-for="TransportNumber" data-valmsg-for="TransportNumber" class="text-danger" aria-live="polite"></span>

                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Brand" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Brand" class="form-control" aria-label="Brand" />
                            <span style="color:red;" asp-validation-for="Brand" data-valmsg-for="Brand" class="text-danger" aria-live="polite"></span>

                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Model" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Model" type="text" class="form-control" formnovalidate aria-label="Model" />
                            <span style="color:red;" asp-validation-for="Model" data-valmsg-for="Model" class="text-danger" aria-live="polite"></span>

                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="RegistrationDate" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="RegistrationDate" type="date" class="form-control" aria-label="Registration Date" formnovalidate />
                            <span style="color:red;"  asp-validation-for="RegistrationDate" class="text-danger" aria-live="polite"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Color" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Color" type="text" class="form-control" aria-label="Color" />
                            <span style="color:red;" asp-validation-for="Color" data-valmsg-for="Color" class="text-danger" aria-live="polite"></span>

                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Capacity" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Capacity" type="text" class="form-control" aria-label="Capacity" />
                            <span style="color:red;" asp-validation-for="Capacity" data-valmsg-for="Capacity" class="text-danger" aria-live="polite"></span>

                        </div>
                    </div>


                    <div class="inputBox inputButton-group">
                        <div class="inputBox-btn">
                            <button type="submit" class="button-primary btn-submit" aria-label="Save">Spara</button>
                            <a asp-action="Index" class="button-secondary btn-submit" aria-label="Close">Avboka</a>

                        </div>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(ViewBag.RegisterFail))
                {
                    <div style="color:red;">@ViewBag.RegisterFail</div>
                }

            </div>
            
        </div>
    </div>

    
</section>





<script defer src="~/js/transport_validation.js"></script>

<script defer src="~/js/main.js"></script>
