@model Nordic_Align_V7.Models.TranportModel


@{
    // Ställ in titeln beroende på om modellen är tom eller inte
    ViewData["Title"] = Model != null && Model.Id != 0 ? "Byt bil" : "Lägga till en bil";
}

<section class="transport">
    <div class="color"></div>
    <div class="color"></div>
    <div class="color"></div>

     <div class="box">
        <div class="square" style="--i:0;"></div>
        <div class="square" style="--i:1;"></div>
        <div class="square" style="--i:2;"></div>
        <div class="square" style="--i:3;"></div>
        <div class="square" style="--i:4;"></div>

        <div class="container">
            <div class="form">

                <h2>@ViewData["Title"]</h2>

                <form asp-action="@(Model != null && Model.Id != 0 ? "Edit" : "Create")" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <div class="inputBox">
                        <label asp-for="TransportNumber" class="label"></label>
                        <div class="inputBox-content">
                            <input asp-for="TransportNumber" class="form-control" />
                            <span asp-validation-for="TransportNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Brand" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Model" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Model" type="text" class="form-control" formnovalidate />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="RegistrationDate" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="RegistrationDate" type="date" class="form-control" formnovalidate />
                            <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Color" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Color" type="text" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Capacity" class="label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Capacity" type="text" class="form-control" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="inputBox inputButton-group">
                        <div class="inputBox-btn">
                            <button type="submit" class="button-primary btn-submit">Spara</button>
                            <a asp-action="Index" class="button-secondary btn-submit">Avboka</a>
                        </div>
                    </div>
                </form>
            </div>
            
        </div>
    </div>

    
</section>





<script defer src="~/js/transport_validation.js"></script>

<script defer src="~/js/main.js"></script>
