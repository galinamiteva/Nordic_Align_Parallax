@model IEnumerable<Nordic_Align_V7.Models.TranportModel>

@{
    ViewData["Title"] = "Fordonsflotta";
}


<section class="transport-table">
    <div class="color"></div>
    <div class="color"></div>
    <div class="color"></div>

    <div class="box">
        <div class="square" style="--i:0;"></div>
        <div class="square" style="--i:1;"></div>
        <div class="square" style="--i:2;"></div>
        <div class="square" style="--i:3;"></div>
        <div class="square" style="--i:4;"></div>

        <div class="container">
            <div class="form">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="error-message" class="alert">
                        @TempData["ErrorMessage"]
                    </div>

                    <script>
                        setTimeout(function() {
                            var errorMessage = document.getElementById("error-message");
                            if (errorMessage) {
                                errorMessage.style.display = "none";
                            }
                        }, 4000);
                    </script>
                }



                <h2>Transport tabell</h2>


                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TransportNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Brand)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Model)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegistrationDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Color)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Capacity)
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>
                                <a style="color:black" href="/Order/OrdersByTransportId?transportId=@item.Id">@Html.DisplayFor(modelItem => item.TransportNumber)</a>
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Brand)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Model)
                            </th>
                            <th>
                                @item.RegistrationDate.ToShortDateString()
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Color)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Capacity)
                            </th>
                            <th>
                                <a class="icon" href="/Transport/Edit?id=@item.Id">&#9998;</a>
                            </th>
                            <th>
                                <a class="icon" href="/Transport/Delete?id=@item.Id">&#128465;</a>
                            </th>
                        </tr>
                    }
                </table>
                <a asp-controller="Transport" target="_self" asp-action="Create" class="button-secondary">Lägg till en bil</a>

            </div>
        </div>

    </div>

    
    
</section>
<script defer src="~/js/main.js"></script>
