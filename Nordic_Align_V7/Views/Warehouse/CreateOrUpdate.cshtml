@model Nordic_Align_V7.Models.WarehouseModel

@{
    // Ställ in titeln beroende på om modellen är tom eller inte
    ViewData["Title"] = Model != null && Model.Id != 0 ? "Ändra lager" : "Lägg till lager";
}

<section class="lager">
    <div class="color"></div>
    <div class="color"></div>
    <div class="color"></div>
    
    <div class="box">
        <div class="square" style="--i:0;"></div>
        <div class="square" style="--i:1;"></div>
        <div class="square" style="--i:2;"></div>
        <div class="square" style="--i:3;"></div>
        <div class="square" style="--i:4;"></div>

        

        <div class="container">
            <div class="form">

                <h2 >@ViewData["Title"]</h2>

                <form asp-action="@(Model != null && Model.Id != 0 ? "Edit" : "Create")" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <div class="inputBox">
                        <label asp-for="Name" class="label"></label>
                        <div class="inputBox-content">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Address" class="label"></label>
                        <div class="inputBox-content">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Phone" class="label"></label>
                        <div class="inputBox-content">
                            <input asp-for="Phone" type="text" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox">
                        <label asp-for="Capacity" class="label"></label>
                        <div class="inputBox-content">
                            <input asp-for="Capacity" class="form-control" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="inputBox inputButton-group">
                        <div class="inputBox-btn">
                            <button type="submit" class="button-primary btn-submit">Spara</button>
                            <a asp-action="Index" class="button-secondary btn-submit">Avboka</a>
                        </div>
                    </div>
                </form>
            </div>

           
        </div>
    
    </div>


    

</section>




<script defer src="~/js/warehouse_validation.js"></script>


