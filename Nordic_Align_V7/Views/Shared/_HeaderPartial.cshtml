@{
    var user = await UserManager.GetUserAsync(User);
    var roles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();
    var role = roles.FirstOrDefault();

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

@if (currentController != "Account")
{
    <header class="header">

        <div class="container">
            <div class="header__inner">
                <button class="burger">
                    <span class="lines @(currentController != "Home" ? "lines-gray" : "")"></span>
                    <span class="lines @(currentController != "Home" ? "lines-gray" : "")"></span>
                    <span class="lines @(currentController != "Home" ? "lines-gray" : "")"></span>
                </button>

                <nav class="menu" data-role="@(role == "User" ? "User" : role == "Admin" ? "Admin" : "None")">
                    <ul class="menu__list">
                        <li class="menu__list-item">
                            <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" onclick="toggle()" asp-controller="Home" asp-action="Index" asp-fragment="home">Hem</a>
                        </li>
                        <li class="menu__list-item">
                            <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" onclick="toggle()" asp-controller="Home" asp-action="Index" asp-fragment="about">Om</a>
                        </li>
                        <li class="menu__list-item">
                            <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" onclick="toggle()" asp-controller="Home" asp-action="Index" asp-fragment="contact">Kontakt</a>
                        </li>

                        @if (role == "User")
                        {
                            <li class="menu__list-item">
                                <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Recepient" asp-action="Index">Mottagare</a>
                            </li>
                            <li class="menu__list-item">
                                <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Order" asp-action="Index">Order</a>
                            </li>
                        }

                        @if (role == "Admin")
                        {
                            <li class="menu__list-item">
                                <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Order" asp-action="Index">Order</a>
                            </li>
                            <li class="menu__list-item">
                                <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Recepient" asp-action="Index">Mottagare</a>
                            </li>
                            <li class="menu__list-item">
                                <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Courier" asp-action="Index">Kurirer</a>
                            </li>
                            <li class="menu__list-item">
                                <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Transport" asp-action="Index">Fordonsflotta</a>
                            </li>
                            <li class="menu__list-item">
                                <a class="menu__list-link @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Warehouse" asp-action="Index">Lager</a>
                            </li>
                            <li class="menu__list-item">
                                <a class="menu__list-link dropdown-toggle @(currentController != "Home" ? "menu__list-black" : "")" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Invoice
                                </a>
                                <ul class="dropdown-menu custom-dropdown @(currentController != "Home" ? "menu__list-black" : "")" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="menu__list-link dropdown-item @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="Invoice" asp-action="CreateInvoice">Skapa Invoice</a>
                                    </li>
                                    <li>
                                        <a class="menu__list-link dropdown-item @(currentController != "Home" ? "menu__list-black" : "")" asp-area="" asp-controller="InvoiceNoTax" asp-action="CreateInvoiceInternational">Skapa NoTax Invoice</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>

                <ul class="menu__list">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="menu__list-item"><a class="header__btn" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="menu__list-item"><a class="header__btn" asp-controller="Account" asp-action="Register">Register</a></li>
                        <li class="menu__list-item"><a class="header__btn header__btn__login" asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>
}

<script type="text/javascript">
    window.addEventListener("scroll", function(){
        var header = document.querySelector("header");
        header.classList.toggle("sticky", window.scrollY > 0)
    })
    function toggle(){
        var header = document.querySelector("header");
        header.classList.toggle("active");
    }
</script>
