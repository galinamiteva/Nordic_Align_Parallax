

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nordic Align - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />


    @* SELECT2 Design *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

  
</head>
<body>
    <div class="wrapper" style="height: calc(var(--vh, 1vh) * 100);">


    

       
        @await Html.PartialAsync("~/Views/Shared/_HeaderPartial.cshtml")
            
        
        <div class="container_rain" >

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @await Html.PartialAsync("~/Views/Shared/_FooterPartial.cshtml")
    
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
          const setFullHeight = () => {
          const vh = window.innerHeight * 0.01;
          document.documentElement.style.setProperty('--vh', `${vh}px`);
        };
        window.addEventListener('resize', setFullHeight);
        setFullHeight();
    </script>
</body>
</html>
