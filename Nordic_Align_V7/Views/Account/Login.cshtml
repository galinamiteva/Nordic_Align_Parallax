@model Nordic_Align_V7.ViewModels.LoginViewModel

<section class="contact-form-login">

    <div class="logo-container">
        <a class="logo" asp-controller="Home" asp-action="Index">
            <img src="https://nordicimagestorage.blob.core.windows.net/files/miniLogo.png" alt="Logo company Nordic">
        </a>
    </div>

    <div class="container">

        <span></span>
        <span></span>
        <span></span>

        <form method="post" class="signin" id="signinForm" asp-controller="Account" asp-action="Login" onclick="return validateForm(event);" novalidate>
            
            
            <h1>@Nordic_Align_V7.Resources.Resource.Loggain</h1>

            <div class="inputBox">
                <input asp-for="Email" type="email" id="Email" data-val="true" aria-label="Email" class="form-control" placeholder="E-Post">
                <span style="color:red;" asp-validation-for="Email" data-valmsg-for="Email" class="text-danger"></span>

            </div>

            <div class="inputBox">
                <input asp-for="Password" type="password" data-val="true" id="Password" aria-label="Password" class="form-control" placeholder="Lösenord" />
                <span style="color:red;" asp-validation-for="Password" data-valmsg-for="Password" class="text-danger"></span>
            </div>

            <div class="inputBox group">
                <p>@Nordic_Align_V7.Resources.Resource.Harduingetkonto</p>
                <a asp-controller="Account" asp-action="Register">@Nordic_Align_V7.Resources.Resource.Registreradig</a>
            </div>

            <div class="inputBox submitBtn">
                <input type="submit" value="@Nordic_Align_V7.Resources.Resource.Loggain">
            </div>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.RegisterFail))
        {
            <div style="color:red;">@ViewBag.LoginFail</div>
        }

    </div>
</section>


<style>

    @@keyframes animate {
        0% {
            --a: 0deg;
        }

        100% {
            --a: 360deg;
        }
    }

    @@property --a {
        syntax: '<angle>';
        inherits: false;
        initial-value: 0deg;
    }

    .contact-form-login .container::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background: repeating-conic-gradient(from var(--a), #f9d3c7f7 0%, #f9d3c7f7 10%, transparent 10%, transparent 80%, #f9d3c7f7 100%);
        border-radius: 20px;
        animation: animate 2.5s linear infinite;
        filter: hue-rotate(140deg);
    }
</style>

<script defer src="~/js/validation.js"></script>