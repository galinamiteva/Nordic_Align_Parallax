@model Nordic_Align_V7.ViewModels.LoginViewModel

<section class="contact-form">
    <div class="container">
        <div class="title">Login Page</div>

        <form method="post" id="loginForm" asp-controller="Account" asp-action="Login" onclick="return validateForm(event);"  novalidate>
            <table>
                
                <tr>
                    <td><label for="email">Email</label></td>                    
                </tr>
                <tr>
                    <td><input asp-for="Email" id="Email" data-val="true" class="invalid"></td>
                    <td style="color:red;">
                        <span asp-validation-for="Email" data-valmsg-for="Email" class="text-danger"></span>
                    </td>
                </tr>
                
                
                <tr>
                    <td><label asp-for="Password"></label></td>
                </tr>
                <tr>
                    <td><input asp-for="Password" type="password" data-val="true" id="Password" class="form-control" /></td>
                    <td style="color:red;">
                        <span asp-validation-for="Password" data-valmsg-for="Password" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><button class="btn-theme" type="submit">Login</button></td>
                </tr>
            </table>
        </form>
        @if (!string.IsNullOrEmpty(ViewBag.RegisterFail))
        {
            <div style="color:red;">@ViewBag.RegisterFail</div>
        }
    </div>
</section>

<script defer src="~/js/validation.js"></script>


